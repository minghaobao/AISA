# 基本配置
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# MQTT配置
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEP_ALIVE=60

# LLM配置
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024
LLM_VERBOSE=False

# InfluxDB配置
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=smart_iot
INFLUXDB_BUCKET=device_data

# 告警配置
ALERT_COOLDOWN=300
ALERT_CHECK_INTERVAL=5
ALERT_LOG_FILE=logs/alerts.log

# 邮件告警配置
EMAIL_ALERT_ENABLED=False
EMAIL_SENDER=alerts@example.com
EMAIL_RECIPIENTS=admin@example.com
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=True
EMAIL_USERNAME=alerts@example.com
EMAIL_PASSWORD=email_password

# Telegram告警配置
TELEGRAM_ALERT_ENABLED=False
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_IDS=chat_id_1,chat_id_2

# Web服务器配置
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=False
WEBSOCKET_PORT=5001
CORS_ORIGINS=*

# JWT配置
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_EXPIRATION_HOURS=24

# 用户密码哈希（使用werkzeug.security.generate_password_hash生成）
ADMIN_PASSWORD_HASH=pbkdf2:sha256:150000$ChangeThis$ChangeThisToActualHash
USER_PASSWORD_HASH=pbkdf2:sha256:150000$ChangeThis$ChangeThisToActualHash 