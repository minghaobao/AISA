# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-3.5-turbo

# MQTT配置
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password

# 设备配置（多个设备用逗号分隔）
DEVICE_IDS=rpi_sensor_001,rpi_sensor_002

# 树莓派执行器配置
RPI_DEVICE_ID=rpi_sensor_001
RPI_HEARTBEAT_INTERVAL=30  # 心跳间隔（秒）

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=ai_command_system.log

# Web服务器配置（如果使用）
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=5000 